modules = ["python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["asciidoc", "bash", "gitFull", "glibcLocales", "pandoc", "fish", "openssh", "ruby_3_4", "vim-full", "asciidoctor"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Pelican Site Server"

[[workflows.workflow]]
name = "Pelican Site Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "invoke livereload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "http.server", "5000", "-d", "docs"]
build = ["pelican", "content", "-s", "publishconf.py"]
